<core:BaseWindow x:Class="CSVAssistent.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVAssistent.View" 
        xmlns:core="clr-namespace:CSVAssistent.Core"
        xmlns:vm="clr-namespace:CSVAssistent.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:coreBehaviors="clr-namespace:CSVAssistent.Core.Behaviors"
        xmlns:converters="clr-namespace:CSVAssistent.Converter"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="400"
        WindowState="{Binding WindowState}"
        Closing="BaseWindow_Closing" 
        StateChanged="Window_StateChanged"
        Title="CSV-Assistent" Height="450" Width="1000">
    <core:BaseWindow.Resources>
        <converters:StatusToImageConverter x:Key="StatusToImageConverter"/>
    </core:BaseWindow.Resources>
    <Border CornerRadius="25 25 15 15" Margin="5"  Background="{DynamicResource Brush.Background}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <!--Commandbereich-->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="35" Background="{DynamicResource Brush.BackgroundCommandBar}" BorderBrush="Black" BorderThickness="1" CornerRadius="15 15 0 0" MouseLeftButtonDown="Border_MouseLeftButtonDown" MouseDown="Border_MouseDown">
                <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="10,0,0,0">
                    <!-- Rechts: Buttons nebeneinander -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">

                        <TextBlock Text="{Binding ActiveTheme}" x:Name="ThemeName" Foreground="{DynamicResource Brush.ForegroundCommandBar}" VerticalAlignment="Center" Margin="0 0 10 0" FontWeight="Bold"/>

                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandTheme}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,25,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTTheme}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button Command="{Binding ChangeThemeCommand}" x:Name="BTTheme" Width="16" Height="16" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/palette.png"/>
                            </Button>
                        </Border>


                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandMinimize}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTMinimize}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button x:Name="BTMinimize" Width="16" Height="16" Command="{x:Static sys:SystemCommands.MinimizeWindowCommand}" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/minimize.png"/>
                            </Button>
                        </Border>
                        <Border CornerRadius="15"
        Background="{DynamicResource Brush.CommandMaximize}"
        Width="22"
        Height="22"
        BorderThickness="1"
        BorderBrush="Black"
        Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTMaximize}"
                             Value="True">
                                            <Setter Property="Effect"
                            Value="{StaticResource PillShadowPressed}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Button x:Name="BTMaximize"
            Width="16"
            Height="16"
            Background="Transparent"
            BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button"
                   BasedOn="{StaticResource NoHoverIconButton}">
                                        <!-- Standard: Fenster normal → Maximize -->
                                        <Setter Property="Command"
                        Value="{x:Static sys:SystemCommands.MaximizeWindowCommand}" />
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Image Source="pack://application:,,,/Images/maximize.png" />
                                            </Setter.Value>
                                        </Setter>

                                        <Style.Triggers>
                                            <!-- Wenn Fenster maximiert → Restore -->
                                            <DataTrigger
                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                          Path=WindowState}"
                        Value="Maximized">
                                                <Setter Property="Command"
                                Value="{x:Static sys:SystemCommands.RestoreWindowCommand}" />
                                                <!-- Optional: anderes Icon im maximierten Zustand -->
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <Image Source="pack://application:,,,/Images/maximize.png" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Border>


                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandExit}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTClose}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button x:Name="BTClose" Width="16" Height="16" Command="{x:Static sys:SystemCommands.CloseWindowCommand}" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/close.png"/>
                            </Button>
                        </Border>
                    </StackPanel>

                    <!-- Links: füllt den gesamten restlichen Platz -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Images/code.png" Width="20" Height="20" VerticalAlignment="Center"/>
                        <TextBlock Text="CSV-Assistent" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource Brush.ForegroundCommandBar}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!--Toolbar-->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Background="{DynamicResource Brush.BackgroundToolBar}" BorderBrush="Black" BorderThickness="0" Padding="5 0">
                <DockPanel LastChildFill="False">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <!--Load File-->
                        <Button Command="{Binding AddFileCommand}"  x:Name="BTAddFile" Width="30" Padding="25 5" Margin="30 5 5 5" Background="{DynamicResource Brush.ButtonCategoryA}" HorizontalAlignment="Left">
                            <Button.ToolTip>Datei hinzufügen</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTAddFile}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/loadfile.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <!--Load Folder-->
                        <Button Command="{Binding AddFolderCommand}" x:Name="BTAddFolder" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ButtonCategoryA}" HorizontalAlignment="Left">
                            <Button.ToolTip>Ordner hinzufügen</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTAddFolder}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/folder.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <Border Width="2" Margin="30 0" Background="{DynamicResource Brush.Background}" BorderThickness="1" BorderBrush="{DynamicResource Brush.Background}"/>

                        <!--Datei Einstellungen-->
                        <Button Command="{Binding OpenFileInfoCommand}" CommandParameter="{Binding SelectedFile}" x:Name="BTFileSettings" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ButtonCategoryB}" HorizontalAlignment="Left">
                            <Button.ToolTip>Datei Einstellungen</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTFileSettings}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/fileinfo.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <Button Command="{Binding OpenAssignmentCommand}" CommandParameter="{Binding SelectedFile}" x:Name="BTAssignment" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ButtonCategoryB}" HorizontalAlignment="Left">
                            <Button.ToolTip>Datei Einstellungen</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTAssignment}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/zuordnung.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <Border Width="2" Margin="30 0" Background="{DynamicResource Brush.Background}" BorderThickness="1" BorderBrush="{DynamicResource Brush.Background}"/>

                        <!--Datei löschen-->
                        <Button Command="{Binding DeleteFileCommand}" CommandParameter="{Binding SelectedFile}" x:Name="BTDelFolder" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ButtonCategoryC}" HorizontalAlignment="Left">
                            <Button.ToolTip>Datei löschen</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTDelFolder}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/deletefile.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <!--Liste leeren-->
                        <Button x:Name="BTDelAll" Command="{Binding DeleteAllFilesCommand}" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ButtonCategoryC}" HorizontalAlignment="Left">
                            <Button.ToolTip>Liste leeren</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTDelAll}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/deletelist.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <Border Width="2" Margin="30 0" Background="{DynamicResource Brush.Background}" BorderThickness="1" BorderBrush="{DynamicResource Brush.Background}"/>

                        <!--Alle Dateien überprüfen-->
                        <Button Command="{Binding ScanAllFilesCommand}" x:Name="BTCheck" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ButtonCategoryD}" HorizontalAlignment="Left">
                            <Button.ToolTip>Alle Dateien überprüfen</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTCheck}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/scan.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <Border Width="2" Margin="30 0" Background="{DynamicResource Brush.Background}" BorderThickness="1" BorderBrush="{DynamicResource Brush.Background}"/>

                        <!--Export-->
                        <Button Command="{Binding ExportDataCommand}" x:Name="BTExport" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ButtonCategoryF}" HorizontalAlignment="Left">
                            <Button.ToolTip>Exportieren</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTExport}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/export.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <Border Width="2" Margin="30 0" Background="{DynamicResource Brush.Background}" BorderThickness="1" BorderBrush="{DynamicResource Brush.Background}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                        <!--Einstellungen-->
                        <Button Command="{Binding SettingsDialogCommand}" x:Name="BTSettings" Width="30" Padding="10 0" Margin="5" Background="{DynamicResource Brush.ButtonCategoryE}" HorizontalAlignment="Left">
                            <Button.ToolTip>App-Einstellungen</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTSettings}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/settings.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <Border Width="2" Margin="30 0" Background="{DynamicResource Brush.Background}" BorderThickness="1" BorderBrush="{DynamicResource Brush.Background}"/>

                        <!--Help-->
                        <Button Command="{Binding HelpCommand}" x:Name="BTHelp" Width="30" Padding="10 0" Margin="5" BorderBrush="#000" Background="{DynamicResource Brush.ButtonCategoryE}" HorizontalAlignment="Left" BorderThickness="1">
                            <Button.ToolTip>Hilfe</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTHelp}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/help.png"/>
                            </Button.OpacityMask>
                        </Button>

                        <!--Info-->
                        <Button Command="{Binding InfoDialogCommand}" x:Name="BTInfo" Width="30" Padding="10 0" Margin="5 5 30 5" BorderBrush="#000" Background="{DynamicResource Brush.ButtonCategoryE}" HorizontalAlignment="Left" BorderThickness="1">
                            <Button.ToolTip>Info / About</Button.ToolTip>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTInfo}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.OpacityMask>
                                <ImageBrush ImageSource="pack://application:,,,/Images/info.png"/>
                            </Button.OpacityMask>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Hauptbereich -->
            <Border Grid.Row="2" Grid.Column="0" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="49*"/>
                        <ColumnDefinition Width="146*"/>
                        <ColumnDefinition Width="805*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="FileListBox"
                     Margin="10,10,10,10"
                     Background="{DynamicResource Brush.FileWindowBackground}"
                     BorderBrush="Black"
                     BorderThickness="1"
                     Foreground="{DynamicResource Brush.FileWindowForeground}"
                     ItemsSource="{Binding Files}"
                     SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                     Grid.ColumnSpan="3"
                     coreBehaviors:FileDropBehavior.DropCommand="{Binding AddFilesDropCommand}"
                     coreBehaviors:DoubleClickBehavior.Command="{Binding HandleDoubleClickCommand}"
                     coreBehaviors:DoubleClickBehavior.CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource Self}}">
                        <ListBox.Resources>
                            <ResourceDictionary xmlns:coreBehaviors="clr-namespace:CSVAssistent.Core.Behaviors" />
                        </ListBox.Resources>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/Images/loadfile.png" Width="16" Height="16"/>
                                    <Image Source="{Binding Status, Converter={StaticResource StatusToImageConverter}}" Width="16" Height="16"/>
                                    <TextBlock Text="{Binding FullPath}" Padding="10 4"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" BorderThickness="0 1 0 0" BorderBrush="black" Background="{DynamicResource Brush.BackgroundCommandBar}" CornerRadius="0 0 10 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="transparent">
                        <Label x:Name="footer1" Foreground="White" HorizontalContentAlignment="Center" Content="Anzahl Dateien in der Liste:"/>
                    </Border>
                    <Border Grid.Column="1" Background="transparent">
                        <Label x:Name="footer2" Foreground="White" HorizontalContentAlignment="Left" Content="{Binding Files.Count}"/>
                    </Border>
                    <Border Grid.Column="2" Background="transparent">
                        <Label x:Name="footer3" Foreground="White" />
                    </Border>
                    <Border Grid.Column="3" Background="transparent">
                        <Label x:Name="footer4" Foreground="White"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</core:BaseWindow>
