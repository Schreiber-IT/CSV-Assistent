<core:BaseWindow x:Class="CSVAssistent.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVAssistent.View" 
        xmlns:pages="clr-namespace:CSVAssistent.View.Pages" 
        xmlns:core="clr-namespace:CSVAssistent.Core"
        xmlns:vm="clr-namespace:CSVAssistent.ViewModel"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:coreBehaviors="clr-namespace:CSVAssistent.Core.Behaviors"
        xmlns:converters="clr-namespace:CSVAssistent.Converter"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="400"
        WindowState="{Binding WindowState}"
        Closing="BaseWindow_Closing" 
        StateChanged="Window_StateChanged"
        Title="CSV-Assistent" Height="450" Width="1000">
    <core:BaseWindow.Resources>
        <converters:StatusToImageConverter x:Key="StatusToImageConverter"/>
    </core:BaseWindow.Resources>
    <Border CornerRadius="25 25 15 15" Margin="5"  Background="{DynamicResource Brush.Background}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <!--Commandbereich-->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="35" Background="{DynamicResource Brush.BackgroundCommandBar}" BorderBrush="Black" BorderThickness="1" CornerRadius="15 15 0 0" MouseLeftButtonDown="Border_MouseLeftButtonDown" MouseDown="Border_MouseDown">
                <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="10,0,0,0">
                    <!-- Rechts: Buttons nebeneinander -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">

                        <TextBlock Text="{Binding ActiveTheme}" x:Name="ThemeName" Foreground="{DynamicResource Brush.ForegroundCommandBar}" VerticalAlignment="Center" Margin="0 0 10 0" FontWeight="Bold"/>

                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandTheme}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,25,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTTheme}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button Command="{Binding ChangeThemeCommand}" x:Name="BTTheme" Width="16" Height="16" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/palette.png" Cursor="Hand"/>
                            </Button>
                        </Border>


                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandMinimize}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTMinimize}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button x:Name="BTMinimize" Width="16" Height="16" Command="{x:Static sys:SystemCommands.MinimizeWindowCommand}" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/minimize.png" Cursor="Hand"/>
                            </Button>
                        </Border>
                        <Border CornerRadius="15"
                                Background="{DynamicResource Brush.CommandMaximize}"
                                Width="22"
                                Height="22"
                                BorderThickness="1"
                                BorderBrush="Black"
                                Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTMaximize}"
                                                     Value="True">
                                            <Setter Property="Effect"
                                                    Value="{StaticResource PillShadowPressed}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Button x:Name="BTMaximize"
                                    Width="16"
                                    Height="16"
                                    Background="Transparent"
                                    BorderThickness="0" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button"
                                        BasedOn="{StaticResource NoHoverIconButton}">
                                        <!-- Standard: Fenster normal → Maximize -->
                                        <Setter Property="Command" Value="{x:Static sys:SystemCommands.MaximizeWindowCommand}" />
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Image Source="pack://application:,,,/Images/maximize.png" />
                                            </Setter.Value>
                                        </Setter>

                                        <Style.Triggers>
                                            <!-- Wenn Fenster maximiert → Restore -->
                                            <DataTrigger 
                                                Binding="{Binding RelativeSource={RelativeSource AncestorType=Window},Path=WindowState}"
                                                Value="Maximized">
                                                <Setter Property="Command"
                                                    Value="{x:Static sys:SystemCommands.RestoreWindowCommand}" />
                                                <!-- Optional: anderes Icon im maximierten Zustand -->
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <Image Source="pack://application:,,,/Images/maximize.png" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Border>


                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandExit}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0" Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTClose}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button x:Name="BTClose" Width="16" Height="16" Command="{x:Static sys:SystemCommands.CloseWindowCommand}" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/close.png"/>
                            </Button>
                        </Border>
                    </StackPanel>

                    <!-- Links: füllt den gesamten restlichen Platz -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Images/code.png" Width="20" Height="20" VerticalAlignment="Center"/>
                        <TextBlock Text="CSV-Assistent" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" FontSize="16" Foreground="{DynamicResource Brush.ForegroundCommandBar}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!--Toolbar-->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Background="{DynamicResource Brush.BackgroundCommandBar}" BorderBrush="Black" BorderThickness="0" Padding="5 0">

                <TabControl Height="auto" FontSize="14" FontWeight="Normal" Background="{DynamicResource Brush.BackgroundCommandBar}" BorderThickness="0" Margin="0 5" Padding="0">
                    <TabControl.Resources>
                        <Style TargetType="Button"
                               BasedOn="{StaticResource RibbonMenuButtonStyle}" />
                        <Style TargetType="TabItem"
                               BasedOn="{StaticResource RibbonTabItemStyle}" />
                    </TabControl.Resources>
                    <TabItem Header="Datei">

                        <StackPanel Orientation="Horizontal">
                            
                            <Button Content="Hinzufügen" 
                                    Command="{Binding AddFileCommand}" 
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/loadfile.png" 
                                    ToolTip="Datei hinzufügen"/>

                            <Button Content="Hinzufügen" 
                                    Command="{Binding AddFolderCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/folder.png"
                                    ToolTip="Ordner hinzufügen"/>

                            <Border Width="2" Margin="30 5" Background="{DynamicResource Brush.ForegroundCommandBar}" BorderThickness="1" BorderBrush="{DynamicResource Brush.ForegroundCommandBar}"/>

                            <Button Content="Löschen" 
                                    Command="{Binding DeleteFileCommand}" 
                                    CommandParameter="{Binding SelectedFile}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/deletefile.png"
                                    ToolTip="Datei aus Liste entfernen"/>

                            <Button Content="Löschen" 
                                    Command="{Binding DeleteAllFilesCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/deletelist.png"
                                    ToolTip="Liste leeren"/>

                            <Border Width="2" Margin="30 5" Background="{DynamicResource Brush.ForegroundCommandBar}" BorderThickness="1" BorderBrush="{DynamicResource Brush.ForegroundCommandBar}"/>

                            <Button Content="Speichern" 
                                    Command="{Binding _assignmentViewModel.SaveAssignmentsCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/savefile.png"
                                    ToolTip="Speichern der Zuweisungsdatei"/>

                            <Button Content="Laden" 
                                    Command="{Binding _assignmentViewModel.LoadAssignmentsCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/folder_open.png"
                                    ToolTip="Laden der Zuweisungsdatei"/>

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Bearbeiten">
                        <StackPanel Orientation="Horizontal">
                            
                            <Button Content="Viewer" 
                                    Command="{Binding OpenFileInfoCommand}"
                                    CommandParameter="{Binding SelectedFile}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/fileinfo.png"
                                    ToolTip="Dateiinhalt anschauen"/>
                            
                            <Button Content="Zuweisung" 
                                    Command="{Binding OpenAssignmentCommand}" 
                                    CommandParameter="{Binding SelectedFile}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/zuordnung.png"
                                    ToolTip="Zentrale Spalten zuweisen"/>
                            
                            <Button Content="Split" 
                                    Command="{Binding SplitFileCommand}" 
                                    CommandParameter="{Binding SelectedFile}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/cut.png"
                                    ToolTip="Datei in mehrere Dateien aufteilen"/>
                            
                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Export">
                        <StackPanel Orientation="Horizontal">

                            <Button Content="Überprüfen" 
                                    Command="{Binding ScanAllFilesCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/scan.png"
                                    ToolTip="Alle Dateien überprüfen"/>

                            <Button Content="Exportieren" 
                                     Command="{Binding ExportDataCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/export.png"
                                    ToolTip="Exportieren"/>

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Einstellungen">
                        <StackPanel Orientation="Horizontal">

                            <Button Content="Einstellungen" 
                                    Command="{Binding SettingsDialogCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/settings.png"
                                    ToolTip="Einstellungen"/>

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Informationen">
                        <StackPanel Orientation="Horizontal">

                            <Button Content="Hilfe" 
                                    Command="{Binding HelpCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/help.png"
                                    ToolTip="Hilfe"/>

                            <Button Content="About" 
                                    Command="{Binding InfoDialogCommand}"
                                    Tag="pack://application:,,,/CSVAssistent;component/Images/info.png"
                                    ToolTip="About/Info"/>

                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Border>

            <!-- Hauptbereich -->
            <Border Grid.Row="2" Grid.Column="0" Margin="0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ListBox x:Name="FileListBox"
                     Margin="10,10,10,10"
                     Background="{DynamicResource Brush.FileWindowBackground}"
                     BorderBrush="Black"
                     BorderThickness="1"
                     Foreground="{DynamicResource Brush.FileWindowForeground}"
                     ItemsSource="{Binding Files}"
                     SelectedItem="{Binding SelectedFile, Mode=TwoWay}"
                     Grid.ColumnSpan="3"
                     coreBehaviors:FileDropBehavior.DropCommand="{Binding AddFilesDropCommand}"
                     coreBehaviors:DoubleClickBehavior.Command="{Binding HandleDoubleClickCommand}"
                     coreBehaviors:DoubleClickBehavior.CommandParameter="{Binding SelectedItem, RelativeSource={RelativeSource Self}}">
                        <ListBox.Resources>
                            <ResourceDictionary xmlns:coreBehaviors="clr-namespace:CSVAssistent.Core.Behaviors" />
                        </ListBox.Resources>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="pack://application:,,,/Images/loadfile.png" Width="16" Height="16"/>
                                    <Image Source="{Binding Status, Converter={StaticResource StatusToImageConverter}}" Width="16" Height="16"/>
                                    <TextBlock Text="{Binding FullPath}" Padding="10 4"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>
            <GridSplitter Grid.Row="2" Grid.Column="1" Width="5" Background="{DynamicResource Brush.Assignment}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ShowsPreview="True"/>

            <Border Grid.Row="2" Grid.Column="2">
                <pages:FileDetailView DataContext="{Binding SelectedFile}"/>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" BorderThickness="0 1 0 0" BorderBrush="black" Background="{DynamicResource Brush.BackgroundCommandBar}" CornerRadius="0 0 10 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="Transparent" Padding="15 0">
                        <ProgressBar x:Name="footerProgressBar"
                                     Width="150"
                                     Height="15"
                                     Minimum="0"
                                     Maximum="100"
                                     IsIndeterminate="False"
                                     Value="{Binding ProgressValue}"
                                     Foreground="{DynamicResource Brush.Assignment}"
                                     Background="{DynamicResource Brush.FileWindowBackground}"
                                     BorderBrush="Black"
                                     BorderThickness="1"/>
                    </Border>
                    <Border Grid.Column="1" Background="transparent" Padding="5 0">
                        <Label x:Name="footer1" Foreground="White" HorizontalContentAlignment="Center" Content="Anzahl Dateien in der Liste:"/>
                    </Border>
                    <Border Grid.Column="2" Background="transparent" Padding="5 0">
                        <Label x:Name="footer2" Foreground="White" HorizontalContentAlignment="Left" Content="{Binding Files.Count}"/>
                    </Border>
                    <Border Grid.Column="3" Background="transparent" Padding="15 0">
                        <Label x:Name="footer3"
                               Foreground="White"
                               Content="{Binding ElementName=FileListBox, Path=SelectedItem.FormattedLines, FallbackValue=-, TargetNullValue=-}"
                               ContentStringFormat="Zeilen: {0}"/>
                    </Border>
                    <Border Grid.Column="4" Background="Transparent" Padding="15 0">
                        <Label x:Name="footer4" Foreground="IndianRed" FontWeight="Bold" Content="{Binding FooterInfo}"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</core:BaseWindow>