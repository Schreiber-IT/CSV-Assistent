<core:BaseWindow x:Class="CSVAssistent.View.Split"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVAssistent.View"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        xmlns:core="clr-namespace:CSVAssistent.Core"
        xmlns:vm="clr-namespace:CSVAssistent.ViewModel" 
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="400"
        StateChanged="Window_StateChanged"
        Title="Split" Height="500" Width="1000">
    <Border CornerRadius="25 25 15 15" 
            BorderBrush="Black" BorderThickness="1"
            Effect="{StaticResource WindowShadow}"
            Background="{DynamicResource Brush.Background}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <!--Commandbereich-->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="35" Background="{DynamicResource Brush.BackgroundCommandBar}" BorderBrush="Black" BorderThickness="1" CornerRadius="15 15 0 0" MouseLeftButtonDown="Border_MouseLeftButtonDown" MouseDown="Border_MouseDown">
                <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="10,0,0,0">
                    <!-- Rechts: Buttons nebeneinander -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">

                        <Border CornerRadius="15"
        Background="{DynamicResource Brush.CommandMaximize}"
        Width="22"
        Height="22"
        BorderThickness="1"
        BorderBrush="Black"
        Margin="0,0,10,0" Cursor="Hand">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTMaximize}"
                             Value="True">
                                            <Setter Property="Effect"
                            Value="{StaticResource PillShadowPressed}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Button x:Name="BTMaximize"
            Width="16"
            Height="16"
            Background="Transparent"
            BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button"
                   BasedOn="{StaticResource NoHoverIconButton}">
                                        <!-- Standard: Fenster normal → Maximize -->
                                        <Setter Property="Command"
                        Value="{x:Static sys:SystemCommands.MaximizeWindowCommand}" />
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Image Source="/Images/maximize.png" />
                                            </Setter.Value>
                                        </Setter>

                                        <Style.Triggers>
                                            <!-- Wenn Fenster maximiert → Restore -->
                                            <DataTrigger
                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                          Path=WindowState}"
                        Value="Maximized">
                                                <Setter Property="Command"
                                Value="{x:Static sys:SystemCommands.RestoreWindowCommand}" />
                                                <!-- Optional: anderes Icon im maximierten Zustand -->
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <Image Source="/Images/maximize.png" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Border>


                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandExit}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTClose}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button x:Name="BTClose" Width="16" Height="16" Command="{x:Static sys:SystemCommands.CloseWindowCommand}" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="/Images/close.png" Cursor="Hand"/>
                            </Button>
                        </Border>
                    </StackPanel>

                    <!-- Links: füllt den gesamten restlichen Platz -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Image Source="/Images/code.png" Width="20" Height="20" VerticalAlignment="Center"/>
                        <TextBlock Text="Split" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource Brush.ForegroundCommandBar}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!--Toolbar-->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Background="{DynamicResource Brush.BackgroundToolBar}" BorderBrush="Black" BorderThickness="0" Padding="5 0">
                <StackPanel Orientation="Horizontal">
                    <!--Home-->
                    <Button x:Name="BTHome" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ImageButton}" HorizontalAlignment="Left" Cursor="Hand">
                        <Button.ToolTip>Startseite</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Effect" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTHome}" Value="True">
                                        <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.OpacityMask>
                            <ImageBrush ImageSource="/Images/cut.png"/>
                        </Button.OpacityMask>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Hauptbereich -->
            <Border Grid.Row="2" Grid.Column="0" Margin="10" Background="{DynamicResource Brush.FileWindowBackground}">
                <Border.Effect>
                    <DropShadowEffect></DropShadowEffect>
                </Border.Effect>
                <Grid>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <TextBlock Text="Informationen" FontSize="18" Foreground="{DynamicResource Brush.ButtonCategoryE}"/>
                        <DockPanel LastChildFill="True" Margin="10 5">
                            <TextBlock Text="{Binding SplitFile.Name}" Foreground="{DynamicResource Brush.Foreground}" DockPanel.Dock="Right"/>
                            <TextBlock Text="Dateiname:" Foreground="{DynamicResource Brush.Foreground}" DockPanel.Dock="Left"/>
                        </DockPanel>
                        <DockPanel LastChildFill="True" Margin="10 5">
                            <TextBlock Text="{Binding SplitFile.FormattedLines}" Foreground="{DynamicResource Brush.Foreground}" DockPanel.Dock="Right"/>
                            <TextBlock Text="Zeilen:" Foreground="{DynamicResource Brush.Foreground}" DockPanel.Dock="Left"/>
                        </DockPanel>
                        <Border Margin="10 15"/>
                        <DockPanel LastChildFill="True" Margin="10 5">
                            <TextBlock Text="{Binding FileCount}" Foreground="{DynamicResource Brush.Foreground}" DockPanel.Dock="Right"/>
                            <TextBlock Text="Anzahl Dateien nach Split:" Foreground="{DynamicResource Brush.Foreground}" DockPanel.Dock="Left"/>
                        </DockPanel>
                        <DockPanel LastChildFill="True" Margin="10 5">
                            <TextBlock Text="{Binding RowlimitString}" Foreground="{DynamicResource Brush.Foreground}" DockPanel.Dock="Right"/>
                            <TextBlock Text="Zeilen je Datei nach Split:" Foreground="{DynamicResource Brush.Foreground}" DockPanel.Dock="Left"/>
                        </DockPanel>
                        <Border Margin="10 15"/>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Row="2" Grid.Column="1" Margin="10" Background="{DynamicResource Brush.FileWindowBackground}">
                <Border.Effect>
                    <DropShadowEffect></DropShadowEffect>
                </Border.Effect>
                <Grid>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <TextBlock Text="Optionen" FontSize="18" Foreground="{DynamicResource Brush.ButtonCategoryE}"></TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            <Border Grid.Row="2" Grid.Column="2" Margin="10" Background="{DynamicResource Brush.FileWindowBackground}">
                <Border.Effect>
                    <DropShadowEffect></DropShadowEffect>
                </Border.Effect>
                <Grid>
                    <StackPanel Orientation="Vertical" Margin="10">
                        <TextBlock Text="Aktionen" FontSize="18" Foreground="{DynamicResource Brush.ButtonCategoryE}"></TextBlock>
                    </StackPanel>
                </Grid>
            </Border>
            <!-- Footer -->
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" BorderThickness="0 1 0 0" BorderBrush="black" Background="{DynamicResource Brush.BackgroundCommandBar}" CornerRadius="0 0 10 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="transparent">
                        <Label x:Name="footer1" Foreground="White"/>
                    </Border>
                    <Border Grid.Column="1" Background="transparent">
                        <Label x:Name="footer2" Foreground="White"/>
                    </Border>
                    <Border Grid.Column="2" Background="transparent">
                        <Label x:Name="footer3" Foreground="White" />
                    </Border>
                    <Border Grid.Column="3" Background="transparent">
                        <Label x:Name="footer4" Foreground="White"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</core:BaseWindow>
