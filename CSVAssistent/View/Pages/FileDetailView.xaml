<UserControl x:Class="CSVAssistent.View.Pages.FileDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSVAssistent.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  Margin="5 0"
                  CanContentScroll="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!--Dateiname-->
            <TextBlock Text="Dateiname:" 
                       Grid.Row="0" Grid.Column="0"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="{Binding Name}" 
                       Grid.Row="0" Grid.Column="1"
                       FontSize="14"
                       HorizontalAlignment="Left" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <!--Pfad-->
            <TextBlock Text="Pfad:" 
                       Grid.Row="1" Grid.Column="0"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="{Binding FullPath}" 
                       Grid.Row="1" Grid.Column="1"
                       FontSize="14"
                       HorizontalAlignment="Left" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <!--Zeilenanzahl-->
            <TextBlock Text="Anzahl Zeilen:" 
                       Grid.Row="2" Grid.Column="0"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="{Binding FormattedLines}" 
                       Grid.Row="2" Grid.Column="1"
                       FontSize="14"
                       HorizontalAlignment="Left" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <!--Separator-->
            <TextBlock Text="Separator:" 
                       Grid.Row="3" Grid.Column="0"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="{Binding Separator}" 
                       Grid.Row="3" Grid.Column="1"
                       FontSize="14"
                       HorizontalAlignment="Left" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <!--FileHash-->
            <TextBlock Text="FileHash:" 
                       Grid.Row="4" Grid.Column="0"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="{Binding FileHash}" 
                       Grid.Row="4" Grid.Column="1"
                       FontSize="14"
                       HorizontalAlignment="Left" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <!--Unbekannt-->
            <TextBlock Text="---:" 
                       Grid.Row="5" Grid.Column="0"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="" 
                       Grid.Row="5" Grid.Column="1"
                       FontSize="14"
                       HorizontalAlignment="Left" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <!--Unbekannt-->
            <TextBlock Text="---:" 
                       Grid.Row="6" Grid.Column="0"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="" 
                       Grid.Row="6" Grid.Column="1"
                       FontSize="14"
                       HorizontalAlignment="Left" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <!--Unbekannt-->
            <TextBlock Text="---:" 
                       Grid.Row="7" Grid.Column="0"
                       FontSize="14"
                       HorizontalAlignment="Center" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>
            <TextBlock Text="" 
                       Grid.Row="7" Grid.Column="1"
                       FontSize="14"
                       HorizontalAlignment="Left" Margin="10"
                       Foreground="{DynamicResource Brush.Foreground}"/>

        </Grid>
    </ScrollViewer>
</UserControl>
