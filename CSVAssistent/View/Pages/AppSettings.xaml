<UserControl x:Class="CSVAssistent.View.Pages.AppSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSVAssistent.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <Border BorderThickness="1" BorderBrush="black" 
                Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                Height="80" 
                CornerRadius="10"
                Background="{DynamicResource Brush.Background}"
                Padding="10" Margin="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Doppelklick Auswahl" HorizontalAlignment="Center" Margin="5" Foreground="{DynamicResource Brush.Foreground}"></TextBlock>
                    <ComboBox Text="Doppelklick Auswahl"
                      ItemsSource="{Binding DoubleClickOptions}"
                      SelectedItem="{Binding SelectedDBClick, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Height="25" Width="200"/>
                </StackPanel>
                <TextBlock Text="Wählen Sie aus, welche Aktion beim Doppelklick auf eine Zelle ausgeführt werden soll." 
                           VerticalAlignment="Center" Margin="20 0"
                           Foreground="{DynamicResource Brush.Foreground}"/>
            </StackPanel>
        </Border>
        <Border BorderThickness="1" BorderBrush="black" 
                Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
                Height="80" 
                CornerRadius="10"
                Background="{DynamicResource Brush.Background}"
                Padding="10" Margin="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Zeilen-Limit für DateiInfo" HorizontalAlignment="Center" Margin="5" Foreground="{DynamicResource Brush.Foreground}"></TextBlock>
                    <ComboBox ItemsSource="{Binding RowLimit}"
                      SelectedItem="{Binding SelectedRowLimit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Height="25" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="Wählen Sie aus, ab wann die DateiInfo-Anzeige aus Performancegründen" 
                       VerticalAlignment="Center" Margin="20 0"
                       Foreground="{DynamicResource Brush.Foreground}"/>
                    <TextBlock Text="die Daten nicht mehr anzeigen soll!" 
                       VerticalAlignment="Center" Margin="20 0"
                       Foreground="{DynamicResource Brush.Foreground}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
