<UserControl x:Class="CSVAssistent.View.Pages.ErrorList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSVAssistent.View.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,5">
            <Border CornerRadius="15" BorderThickness="1" BorderBrush="{DynamicResource Brush.WindowBorder}" Margin="5">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Background" Value="{DynamicResource Brush.BackgroundButton}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPressed, ElementName=BTRefresh}" Value="True">
                                <Setter Property="Background" Value="{DynamicResource Brush.FileWindowBackground}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.5"/>
                </Border.Effect>
                <Button Content="Aktualisieren"
                    BorderThickness="0"
                    Style="{StaticResource NoHoverIconButton}"
                    Padding="10"
                    x:Name="BTRefresh"
                    Command="{Binding RefreshCommand}"
                    Background="Transparent"
                    Foreground="{DynamicResource Brush.ForegroundButton}"
                    Width="100" >
                </Button>
            </Border>
        </StackPanel>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Liste der Fehler -->
            <ListView Grid.Row="0"
                      ItemsSource="{Binding Errors}"
                      SelectedItem="{Binding SelectedError}"
                      Background="{DynamicResource Brush.FileWindowBackground}"
                      Foreground="{DynamicResource Brush.FileWindowForeground}">
                <ListView.Resources>
                    <Style TargetType="ListViewItem">
                        <Setter Property="Height" Value="28"></Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource Brush.FileWindowBackground}"/>
                                <Setter Property="Background" Value="{DynamicResource Brush.FileWindowForeground}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{DynamicResource Brush.FileWindowBackground}"/>
                                <Setter Property="Background" Value="{DynamicResource Brush.FileWindowForeground}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Zeit" Width="150"
                                        DisplayMemberBinding="{Binding Timestamp}" />
                        <GridViewColumn Header="Level" Width="80"
                                        DisplayMemberBinding="{Binding Level}" />
                        <GridViewColumn Header="Kontext" Width="150"
                                        DisplayMemberBinding="{Binding Context}" />
                        <GridViewColumn Header="Nachricht" Width="400"
                                        DisplayMemberBinding="{Binding Message}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Details zum ausgewählten Fehler -->
            <TextBox Grid.Row="1"
                     Margin="0,5,0,0"
                     Text="{Binding SelectedError.StackTrace}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Background="{DynamicResource Brush.FileWindowBackground}"
                     Foreground="{DynamicResource Brush.FileWindowForeground}"                     
                     VerticalScrollBarVisibility="Auto" />
        </Grid>
    </DockPanel>
</UserControl>
