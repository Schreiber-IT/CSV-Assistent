<core:BaseWindow x:Class="CSVAssistent.View.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVAssistent.View"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        xmlns:core="clr-namespace:CSVAssistent.Core"
        xmlns:vm="clr-namespace:CSVAssistent.ViewModel" 
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        StateChanged="Window_StateChanged"
        MinHeight="400" MinWidth="400"
        Title="About" Height="600" Width="600">

    <Border CornerRadius="25 25 15 15" Background="{DynamicResource Brush.Background}" Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="white" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--Commandbereich-->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="35" Background="{DynamicResource Brush.BackgroundCommandBar}" BorderBrush="Black" BorderThickness="1" CornerRadius="15 15 0 0" MouseDown="Border_MouseDown">
                <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="10,0,0,0">
                    <!-- Rechts: Buttons nebeneinander -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandExit}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTClose}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button x:Name="BTClose" Width="16" Height="16" Command="{x:Static sys:SystemCommands.CloseWindowCommand}" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/close.png"/>
                            </Button>
                        </Border>
                    </StackPanel>

                    <!-- Links: füllt den gesamten restlichen Platz -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Images/code.png" Width="20" Height="20" VerticalAlignment="Center"/>
                        <TextBlock Text="About" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource Brush.ForegroundCommandBar}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Hauptbereich -->
            <Border Grid.Row="2" Grid.Column="0" Margin="0" Grid.ColumnSpan="2" CornerRadius="0 0 15 15" Background="white">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Image Source="pack://application:,,,/Images/logoimg.png" Height="200" Grid.Row="0"/>
                    <TextBlock Text="CSV-Assistent" FontSize="24" FontWeight="Bold" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
                    <TextBlock Text="Version 1.0.0" FontSize="18" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
                    <TextBlock Text="© 2025 Holger Schreiber. All rights reserved." FontSize="18" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
                    <TextBox Background="{DynamicResource Brush.FileWindowForeground}" Grid.Row="4" Text="{Binding LicenseFile}" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" Margin="5"/>
                    <Border CornerRadius="10" Grid.Row="6" Background="{DynamicResource Brush.BackgroundButton}" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20">
                        <Button Content="OK" Command="{x:Static sys:SystemCommands.CloseWindowCommand}" Background="Transparent" BorderThickness="0" FontWeight="Bold" Foreground="{DynamicResource Brush.ForegroundButton}"/>
                    </Border>
                </Grid>
            </Border>

        </Grid>
    </Border>
</core:BaseWindow>
