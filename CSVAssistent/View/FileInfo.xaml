<core:BaseWindow x:Class="CSVAssistent.View.FileInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSVAssistent.View"
        xmlns:sys="clr-namespace:System.Windows;assembly=PresentationFramework"
        xmlns:core="clr-namespace:CSVAssistent.Core"
        xmlns:vm="clr-namespace:CSVAssistent.ViewModel" 
        xmlns:coreBehaviors="clr-namespace:CSVAssistent.Core.Behaviors"
        mc:Ignorable="d"
        Background="Transparent"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        MinHeight="400" MinWidth="400"
        StateChanged="Window_StateChanged"
        Title="FileInfo" Height="450" Width="800">
    <Border CornerRadius="25 25 15 15" Margin="5" Background="{DynamicResource Brush.Background}" BorderThickness="0" BorderBrush="white">
        <Border.Effect>
            <DropShadowEffect Color="{DynamicResource Color.FileInfoBorder}" BlurRadius="5" ShadowDepth="0" Opacity="0.9"/>
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>

            <!--Commandbereich-->
            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Height="35" Background="{DynamicResource Brush.BackgroundCommandBar}" BorderBrush="Black" BorderThickness="1" CornerRadius="15 15 0 0" MouseLeftButtonDown="Border_MouseLeftButtonDown" MouseDown="Border_MouseDown">
                <DockPanel LastChildFill="True" VerticalAlignment="Center" Margin="10,0,0,0">
                    <!-- Rechts: Buttons nebeneinander -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandMinimize}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTMinimize}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button x:Name="BTMinimize" Width="16" Height="16" Command="{x:Static sys:SystemCommands.MinimizeWindowCommand}" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/minimize.png"/>
                            </Button>
                        </Border>
                        <Border CornerRadius="15"
        Background="{DynamicResource Brush.CommandMaximize}"
        Width="22"
        Height="22"
        BorderThickness="1"
        BorderBrush="Black"
        Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTMaximize}"
                             Value="True">
                                            <Setter Property="Effect"
                            Value="{StaticResource PillShadowPressed}" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Button x:Name="BTMaximize"
            Width="16"
            Height="16"
            Background="Transparent"
            BorderThickness="0">
                                <Button.Style>
                                    <Style TargetType="Button"
                   BasedOn="{StaticResource NoHoverIconButton}">
                                        <!-- Standard: Fenster normal → Maximize -->
                                        <Setter Property="Command"
                        Value="{x:Static sys:SystemCommands.MaximizeWindowCommand}" />
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <Image Source="pack://application:,,,/Images/maximize.png" />
                                            </Setter.Value>
                                        </Setter>

                                        <Style.Triggers>
                                            <!-- Wenn Fenster maximiert → Restore -->
                                            <DataTrigger
                        Binding="{Binding RelativeSource={RelativeSource AncestorType=Window},
                                          Path=WindowState}"
                        Value="Maximized">
                                                <Setter Property="Command"
                                Value="{x:Static sys:SystemCommands.RestoreWindowCommand}" />
                                                <!-- Optional: anderes Icon im maximierten Zustand -->
                                                <Setter Property="Content">
                                                    <Setter.Value>
                                                        <Image Source="pack://application:,,,/Images/maximize.png" />
                                                    </Setter.Value>
                                                </Setter>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Border>


                        <Border CornerRadius="15" Background="{DynamicResource Brush.CommandExit}" Width="22" Height="22" BorderThickness="1" BorderBrush="Black" Margin="0,0,10,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Effect" Value="{x:Null}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTClose}" Value="True">
                                            <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Button x:Name="BTClose" Width="16" Height="16" Command="{x:Static sys:SystemCommands.CloseWindowCommand}" Background="Transparent" BorderThickness="0" Style="{StaticResource NoHoverIconButton}">
                                <Image Source="pack://application:,,,/Images/close.png"/>
                            </Button>
                        </Border>
                    </StackPanel>

                    <!-- Links: füllt den gesamten restlichen Platz -->
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/Images/code.png" Width="20" Height="20" VerticalAlignment="Center"/>
                        <TextBlock Text="FileInfo" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" FontSize="14" Foreground="{DynamicResource Brush.ForegroundCommandBar}"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!--Toolbar-->
            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Background="{DynamicResource Brush.BackgroundToolBar}" BorderBrush="Black" BorderThickness="0" Padding="5 0">
                <StackPanel Orientation="Horizontal">
                    <!--Home-->
                    <Button Command="{Binding OpenAssignmentCommand}" x:Name="BTAssignment" Width="30" Padding="25 5" Margin="30 5 0 5" Background="{DynamicResource Brush.ButtonCategoryB}" HorizontalAlignment="Left">
                        <Button.ToolTip>Zuordnung zur Zentralen Tabelle</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Effect" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTAssignment}" Value="True">
                                        <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.OpacityMask>
                            <ImageBrush ImageSource="pack://application:,,,/Images/zuordnung.png"/>
                        </Button.OpacityMask>
                    </Button>
                    <Border Width="2" Margin="30 0" Background="{DynamicResource Brush.Background}" BorderThickness="1" BorderBrush="{DynamicResource Brush.Background}"/>
                    <TextBlock Text="Suche in:" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Margin="0 0 5 0" Foreground="{DynamicResource Brush.ForegroundToolBar}"/>
                    <ComboBox x:Name="cmbSearchColumn" Width="200" Height="26" Margin="0 0 10 0" ItemsSource="{Binding SearchColumns}" SelectedItem="{Binding SelectedSearchColumn}" Foreground="black"/>
                    <TextBlock Text="Suchbegriff:" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Margin="0 0 5 0" Foreground="{DynamicResource Brush.ForegroundToolBar}"/>
                    <TextBox x:Name="txtSearchTerm"
                        Width="200"
                        Height="26"
                        Margin="0 0 10 0"
                        Foreground="{DynamicResource Brush.ForegroundCommandBar}"
                        Background="{DynamicResource Brush.BackgroundToolBar}"
                        Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"/>

                    <Button x:Name="BTResetSearch" Width="30" Padding="25 5" Margin="5" Background="{DynamicResource Brush.ButtonCategoryC}" HorizontalAlignment="Left" Command="{Binding ResetSearchCommand}">
                        <Button.ToolTip>Suche Zurücksetzen</Button.ToolTip>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Effect" Value="{x:Null}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=BTResetSearch}" Value="True">
                                        <Setter Property="Effect" Value="{StaticResource PillShadowPressed}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.OpacityMask>
                            <ImageBrush ImageSource="pack://application:,,,/Images/searchend.png"/>
                        </Button.OpacityMask>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Hauptbereich -->
            <Border Grid.Row="2" Grid.Column="0" Margin="10 0">
                <Grid>
                    <DockPanel LastChildFill="True">
                        <ListBox ItemsSource="{Binding ColumnNames}"
                            Width="auto"
                            Margin="10 5 0 5"
                            Background="{DynamicResource Brush.FileWindowBackground}"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Foreground="{DynamicResource Brush.FileWindowForeground}">
                        </ListBox>
                        <ListView ItemsSource="{Binding FilteredRows}" coreBehaviors:GridViewSortBehavior.SortCommand="{Binding SortCommand}"
                            Margin="0 5 10 5"
                            Background="{DynamicResource Brush.FileWindowBackground}"
                            BorderBrush="Black"
                            BorderThickness="1"
                            Foreground="{DynamicResource Brush.FileWindowForeground}">
                            <ListView.Resources>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Height" Value="28"></Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Brush.FileWindowBackground}"/>
                                            <Setter Property="Background" Value="{DynamicResource Brush.FileWindowForeground}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource Brush.FileWindowBackground}"/>
                                            <Setter Property="Background" Value="{DynamicResource Brush.FileWindowForeground}"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Background" Value="{DynamicResource Brush.FileWindowHeaderBackground}"/>
                                    <Setter Property="Foreground" Value="{DynamicResource Brush.FileWindowForeground}"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="10"/>
                                    <Setter Property="BorderBrush" Value="Black"/>
                                    <Setter Property="BorderThickness" Value="0 0 1 1"/>
                                    <Setter Property="Height" Value="25"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="GridViewColumnHeader">
                                                <Grid>
                                                    <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                                    </Border>
                                                    <Thumb x:Name="PART_HeaderGripper"
                                                    Width="2"
                                                    HorizontalAlignment="Right"
                                                    Cursor="SizeWE"
                                                    Background="Transparent"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.Resources>
                            <ListView.View>
                                <GridView coreBehaviors:GridViewColumnGenerator.ColumnsSource="{Binding ColumnNames}" />
                            </ListView.View>
                        </ListView>
                    </DockPanel>
                </Grid>
            </Border>

            <!-- Footer -->
            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" BorderThickness="0 1 0 0" BorderBrush="black" Background="{DynamicResource Brush.BackgroundCommandBar}" CornerRadius="0 0 10 10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="0" Background="transparent">
                        <Label x:Name="footer1" Foreground="White" Content="{Binding CsvFile.FullPath}" Margin="10 0"/>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</core:BaseWindow>
