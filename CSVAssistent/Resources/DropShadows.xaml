<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- leichter Schatten für normale Buttons -->
    <DropShadowEffect x:Key="PillShadow"
                    Color="{DynamicResource Color.ButtonShadow}"
                    Opacity="0.5"
                    BlurRadius="8"
                    ShadowDepth="2"
                    RenderingBias="Performance"/>

    <!-- stärkerer Schatten für gedrückt -->
    <DropShadowEffect x:Key="PillShadowPressed"
                    Color="{DynamicResource Color.ButtonShadowPress}"
                    Opacity="0.85"
                    BlurRadius="12"
                    ShadowDepth="0"
                    RenderingBias="Performance"/>
    
</ResourceDictionary>