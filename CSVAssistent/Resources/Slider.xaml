<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=PresentationFramework">
    <!-- runder Thumb -->
    <Style x:Key="RoundThumbStyle" TargetType="{x:Type primitives:Thumb}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type primitives:Thumb}">
                    <Ellipse Width="18" Height="18"
                             Fill="White"
                             Stroke="Gray"
                             StrokeThickness="1">
                        <Ellipse.Effect>
                            <DropShadowEffect ShadowDepth="0" BlurRadius="3" Opacity="0.5"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Slider-Style mit sichtbarem Track -->
    <Style TargetType="{x:Type Slider}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Slider}">
                    <Grid Margin="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- TRACK -->
                        <Track x:Name="PART_Track"
                               VerticalAlignment="Center"
                               Height="30">
                            <Track.Effect>
                                <DropShadowEffect ShadowDepth="5" BlurRadius="5" Opacity="0.9"/>
                            </Track.Effect>
                            <!-- Bereich links vom Thumb (Fortschritt) -->
                            <Track.DecreaseRepeatButton>
                                <RepeatButton
                                    Command="Slider.DecreaseLarge"
                                    Background="#4CAF50"
                                    BorderThickness="0"
                                    Height="3" />
                            </Track.DecreaseRepeatButton>

                            <!-- Bereich rechts vom Thumb (Rest der Leiste) -->
                            <Track.IncreaseRepeatButton>
                                <RepeatButton
                                    Command="Slider.IncreaseLarge"
                                    Background="#CCCCCC"
                                    BorderThickness="0"
                                    Height="3" />
                            </Track.IncreaseRepeatButton>

                            <!-- runder Thumb -->
                            <Track.Thumb>
                                <primitives:Thumb Style="{StaticResource RoundThumbStyle}" />
                            </Track.Thumb>
                        </Track>

                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>